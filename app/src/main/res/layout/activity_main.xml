<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.notification.MainActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="303dp"
        android:layout_marginEnd="10dp"
        android:contentDescription=""
        app:srcCompat="@drawable/firebase"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="197dp"
        android:layout_marginEnd="85dp"
        android:text="show Token"
        android:textSize="20dp"
        tools:ignore="HardcodedText,SpUsage"
        tools:text="Show Token" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_show"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="73dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />


</RelativeLayout>
